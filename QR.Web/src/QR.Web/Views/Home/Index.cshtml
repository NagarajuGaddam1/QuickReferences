@{
    ViewData["Title"] = "quickRef Home";
}

<script type="text/javascript">
    var _value = '@ViewData["_IS_POST_SPECIFIC"].ToString().ToLower()';
    console.log('@ViewData["_IS_POST_SPECIFIC"]');
    window["_IS_POST_SPECIFIC"] = _value == "false" ? false : true;
</script>

<script src="~/dist/js/lib.min.js"></script>
<script src="~/dist/js/app.extensions.min.js"></script>
<script src="~/dist/js/app.explore.min.js"></script>
<div class="container-fluid" ng-csp ng-app="QR.Web" style="background:rgb(250,250,250);">
    <div class="row h100" ng-controller="AppController as app">
        <div class="content-body full-height" auto-height="{{app.shared.hideFooter == true ? 0 : 48}}">
            <div class="content-body-container">
                <div class="container-fluid dashboard">
                    <div class="dashboard-view">
                        <div class="dashboard-view-top" data-tag="view-top">
                            <div class="app-title" data-tag="app-title-main">
                                <img src="/dist/images/quickRef.png" />
                            </div>
                            <div class="dashboard-view-header" data-tag="view-header">
                                <div class="dashboard-view-header-content" ng-attr-data-readingmode="{{app.readingMode}}">
                                    <md-input-container class="dashboard-view-header-category">
                                        <md-select ng-model="app.selectedCategory" ng-change="app.selectCategory()">
                                            <md-option ng-repeat="state in app.categories" ng-value="state.id">
                                                {{state.name}}
                                            </md-option>
                                        </md-select>
                                    </md-input-container>
                                    <div class="dashboard-view-header-search">
                                        <div class="dashboard-view-header-search-holder">
                                            <input ng-model="app.searchToken" placeholder="Search in titles, tags & descriptions ..." />
                                            <i class="ms-Icon ms-Icon--Search dashboard-view-header-icon" tabindex="0" data-hide-on-mobile="true"></i>
                                        </div>
                                        <i class="ms-Icon ms-Icon--ViewAll dashboard-view-header-icon dashboard-view-header-icon-readingMode" tabindex="0" ng-attr-data-active="{{!app.readingMode}}" ng-click="app.enableReadingMode()"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="dashboard-content-holder" data-tag="content-holder">
                            <md-content class="dashboard-content" ng-attr-data-readingmode="{{app.readingMode}}">
                                <md-tabs md-dynamic-height="" md-border-bottom="" md-stretch-tabs="always" md-selected="app.selectedTabIndex">
                                    <md-tab label="All" md-on-select="app.onTabSelected('all')" md-on-deselect="app.onTabDeselected('all')">
                                        <md-content class="md-padding" id="_mdContent_all"></md-content>
                                    </md-tab>
                                    <md-tab label="JavaScript" md-on-select="app.onTabSelected('javascript')" md-on-deselect="app.onTabDeselected('javascript')">
                                        <md-content class="md-padding" id="_mdContent_javascript"></md-content>
                                    </md-tab>
                                    <md-tab label="HTML5" md-on-select="app.onTabSelected('markup')" md-on-deselect="app.onTabDeselected('markup')">
                                        <md-content class="md-padding" id="_mdContent_markup"></md-content>
                                    </md-tab>
                                    <md-tab label="CSS" md-on-select="app.onTabSelected('css')" md-on-deselect="app.onTabDeselected('css')">
                                        <md-content class="md-padding" id="_mdContent_css"></md-content>
                                    </md-tab>
                                    <md-tab label="Other(s)" md-on-select="app.onTabSelected('others')" md-on-deselect="app.onTabDeselected('others')">
                                        <md-content class="md-padding" id="_mdContent_others"></md-content>
                                    </md-tab>
                                </md-tabs>                                
                            </md-content>
                            <div ng-include="'templates/explore/footer.tmpl.html'"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<a class="jump-link" href="/Author">Authoring</a>